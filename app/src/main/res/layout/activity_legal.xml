<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/boxes"
    tools:context="tris.papa_applition.TaxationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/civil"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Civil Matters"
            android:id="@+id/civilmatters"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/criminal"
            android:layout_marginLeft="15dp"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Criminal Matters"
            android:id="@+id/criminalmatters"
            android:layout_marginLeft="40dp"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/family"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Family Matters"
            android:id="@+id/familymatters"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/matrimonial"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Matrimonial Matters"
            android:id="@+id/matrimonial"
            android:layout_marginLeft="40dp"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/labor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Labor Matters"
            android:id="@+id/labormatters"
            android:layout_marginLeft="40dp"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/patentlaw"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Intellectual property/Patent Law"
            android:id="@+id/intellectual"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/others"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Others"
            android:id="@+id/otherslegal"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>




</LinearLayout>
