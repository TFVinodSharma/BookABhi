<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/boxes"
    tools:context="tris.papa_applition.TaxationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/gst"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="GST Expert"
            android:id="@+id/gstexpert"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/incometax"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Income Tax Expert"
            android:id="@+id/incometax"
            android:layout_marginLeft="30dp"
            android:textSize="@dimen/font_size"/>

    </LinearLayout>



</LinearLayout>
